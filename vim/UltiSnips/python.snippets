snippet argparse "Argument Parser"
import argparse
${1:parser} = argparse.ArgumentParser()
$1.add_argument(${2:argument})
${3:args} = $1.parse_args()
${0}
endsnippet

snippet progress "Simple Progress Bar"
${1:$1} = 100 * (${2:iter} + 1) / ${3:iter_max}
print('\r[{0:10}] {1:3.0f}%'.format("#" * int($1//10), $1), flush=True)
endsnippet
